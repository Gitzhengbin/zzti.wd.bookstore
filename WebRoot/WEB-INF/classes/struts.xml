<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.i18n.encoding" value="utf-8"/>
	<package name="default" namespace="/" extends="struts-default">
		<!-- 前台 -->
		<action name="stageListBookAction" class="stageAction"
			method="findAllBook">
			<result name="success">/stagepages/stagebook.jsp</result>
		</action>
		<!-- 后台 -->
		<action name="addBookAction" class="backAction"
			method="addBook">
			<result name="success" type="redirect">/listBookAction</result>
		</action>
		<action name="listBookAction" class="backAction"
			method="findAllBook">
			<result name="success">/backpages/listbook.jsp</result>	
		</action>
		<action name="updateBookAction" class="backAction"
			method="updateBook">
			<result name="success" type="redirect">/listBookAction</result>
		</action>
	</package>
</struts>
